<h3 class="mb-5">MFA Validation</h3>
<%= form_with(url: '/mfa/verify') do |f| %>
  <div class="form-group">
    <%= f.text_field :code, class: 'form-control', placeholder: 'MFA Code' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-dark">Send</button>
  </div>
<% end %>